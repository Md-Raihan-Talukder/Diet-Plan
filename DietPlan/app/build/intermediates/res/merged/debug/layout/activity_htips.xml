<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_htips"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient"
    tools:context="com.example.user.dietplan.Htips">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_action_bmi"
            android:hint="BMI"
            android:textColorHint="#faf9f9"
            android:textColor="#faf9f9"
            android:background="#11000000"
            android:id="@+id/bmi"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#9c5c5c"
        app:cardCornerRadius="25dp"
        android:elevation="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/cardView"
        android:layout_alignLeft="@+id/cardView"
        android:layout_alignStart="@+id/cardView"
        android:id="@+id/cardView3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Daily routine for you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/youroutine"
                android:layout_centerInParent="true"
                android:textColor="#faf9f9"
                android:textSize="18sp"
                android:onClick="routine"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#9c5c5c"
        app:cardCornerRadius="25dp"
        android:elevation="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/cardView"
        android:layout_below="@+id/cardView2"
        android:layout_alignLeft="@+id/cardView2"
        android:layout_alignStart="@+id/cardView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Exercise for you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/youexer"
                android:layout_centerInParent="true"
                android:textColor="#faf9f9"
                android:textSize="18sp"
                android:onClick="exercise"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#9c5c5c"
        app:cardCornerRadius="25dp"
        android:elevation="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/cardView3"
        android:layout_alignLeft="@+id/cardView3"
        android:layout_alignStart="@+id/cardView3"
        android:id="@+id/cardView4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Some healty food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/food"
                android:layout_centerInParent="true"
                android:textColor="#faf9f9"
                android:textSize="18sp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#9c5c5c"
        app:cardCornerRadius="25dp"
        android:elevation="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/cardView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Foods for you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/youfood"
                android:layout_centerInParent="true"
                android:textColor="#faf9f9"
                android:textSize="18sp"
                android:onClick="food"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#9c5c5c"
        app:cardCornerRadius="25dp"
        android:elevation="10dp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/cardView4"
        android:layout_alignLeft="@+id/cardView4"
        android:layout_alignStart="@+id/cardView4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Some healthy tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tips"
                android:layout_centerInParent="true"
                android:textColor="#faf9f9"
                android:textSize="18sp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
</RelativeLayout>
