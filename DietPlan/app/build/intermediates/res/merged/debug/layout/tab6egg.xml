<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient"
    tools:context="com.example.user.dietplan.Health$PlaceholderFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="fill_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:text="Eggs"
            android:textAlignment="center"
            android:textColor="#faf9f9"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="250dp"
            app:srcCompat="@drawable/eggs"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_marginTop="20dp"
            android:text="74 calories per large egg\n\nEat 3-7 eggs per week"
            android:textColor="#faf9f9"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />

        <TextView
            android:layout_marginTop="20dp"
            android:text="An egg a day is A-OK, says Ward. Here is why: Eggs contain a heavy-hitting 4 grams of pure muscle-building amino acids inside every shell, in addition to boasting some of the highest naturally available doses around of a vitamin called choline, which is thought to help enhance memory. They are the gold standard in terms of providing all the right nutrients for muscle growth, says Ward."
            android:textColor="#faf9f9"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
